@model Kullanici
        <!-- Navbar Area End -->

        <!-- Page Title Start -->
        
        <!-- Page Title End -->

        <!-- Sign In Section Start -->
        <div class="signin-section ptb-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-8 offset-md-2 offset-lg-3">

                        <form method="post" asp-action="Giris" class="signin-form">

                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
               

                            <div class="form-group">
                        <label asp-for="Eposta">E-Mail Adresiniz</label>
                        <input asp-for="Eposta" class="form-control" placeholder="E-Mail Adresiniz" required>
                            </div>
                            
                            <div class="form-group">
                        <label asp-for="Parola">Şifrenizi Giriniz</label>
                        <input asp-for="Parola" type="password" class="form-control" id="parola" required>
                        <span toggle="#parola" class="fa fa-fw fa-eye-slash field-icon toggle-password"></span>
                            </div>

                            <div class="signin-btn text-center">
                                <button type="submit">Giriş Yap</button>

                    </div>  <div class="text-center">
                        <a asp-action="SifreSifirlama" asp-controller="Hesap">Şifremi Unuttum</a>

                    </div>
							<hr />
							<div class="text-center mt-2">
								<h3 class="mb-2">Henüz Hesabınız Yok mu?</h3>
								<div class="other-option2 pt-2">
                            <a href="@Url.Action("Is_Arayan_Kayit", "IsArayan", new { kullaniciTur = "IsArayan" })" class="signup-btn">İş Arayan Kayit</a>
                            <a href="@Url.Action("Is_Veren_Kayit", "IsVeren", new { kullaniciTur = "IsVeren" })" class="signin-btn">İş Veren Kayit</a>
								</div>
							</div>
                        </form>
                    </div>  
                </div>
            </div>
        </div>
        <!-- Sign In Section End -->

        <!-- Footer Section Start -->
<script>
    document.querySelectorAll(".toggle-password").forEach(function (element) {
        element.addEventListener("click", function () {
            var input = document.querySelector(this.getAttribute("toggle"));
            if (input.type === "password") {
                input.type = "text"; 
                this.classList.remove("fa-eye-slash"); 
                this.classList.add("fa-eye"); 
            } else {
                input.type = "password"; 
                this.classList.remove("fa-eye"); 
                this.classList.add("fa-eye-slash"); 
            }
        });
    });
</script>