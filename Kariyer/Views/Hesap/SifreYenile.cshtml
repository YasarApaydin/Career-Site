@model SifremiUnuttumViewModel

<section class="page-title title-bg14">
    <div class="d-table">
        <div class="d-table-cell">
            <h2>Şifre Yenileme</h2>
            <ul>
                <li>
                    <a href="anasayfa.html">Anasayfa</a>
                </li>
                <li>Şifre Yenileme</li>
            </ul>
        </div>
    </div>
    <div class="lines">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>
</section>
<div class="reset-password ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 offset-md-2 offset-lg-3">
                <form class="reset-form" asp-action="SifreYenile" method="post" >
                    <div class="form-group">
                        <label>E-posta Girin</label>
                        <input type="email" class="form-control" placeholder="E-postanızı Girin" name="email" required="">
                    </div>

                    <div class="reset-btn text-center">
                        <button type="submit">Şifreyi Sıfırla</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<section class="subscribe-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="section-title">
                    <h2>
                        Yeni İş Bildirimleri Alın
                    </h2>
                    <p>Abone olun ve ilgili tüm iş bildirimlerini alın</p>
                </div>
            </div>

            <div class="col-md-6">
                <form class="newsletter-form" data-toggle="validator" novalidate="true">
                
                    <input type="email" class="form-control" placeholder="E-Postanızı Girin" name="Email" required="" autocomplete="off">

                    <button class="default-btn sub-btn disabled" type="submit" style="pointer-events: all; cursor: pointer;">
                        Paylaş
                    </button>

                    <div id="validator-newsletter" class="form-result"></div>
                </form>
            </div>
        </div>
    </div>
</section>