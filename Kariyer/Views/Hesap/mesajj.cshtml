    <script>

        const emails = {
            inbox: [
                { sender: 'Ali Yılmaz', subject: 'Toplantı Detayları', date: '17 Eylül 2024', preview: 'Merhaba, yarınki toplantının detayları aşağıdadır...' },
                { sender: 'Eda Demir', subject: 'Yeni Proje Teklifi', date: '16 Eylül 2024', preview: 'Size yeni bir proje teklifi gönderdik. Detaylar...' },
                { sender: 'Hakan Kaya', subject: 'Ödeme Bildirimi', date: '15 Eylül 2024', preview: 'Son ödeme bildiriminiz aşağıda yer almaktadır...' },
                
            ],
            sent: [
                { sender: 'Sen', subject: 'Proje Raporu', date: '13 Eylül 2024', preview: 'Proje raporunu gönderdim. Gözden geçirebilirsin...' },
                { sender: 'Sen', subject: 'Fiyat Teklifi', date: '12 Eylül 2024', preview: 'Fiyat teklifimizi gönderdim. Detaylar aşağıdadır...' }
            ],
            spam: [
                { sender: 'Reklamcı', subject: 'İndirim Fırsatları!', date: '11 Eylül 2024', preview: 'Büyük indirim fırsatları sizi bekliyor. Kaçırmayın!' },
                { sender: 'Spam Mail', subject: 'Hediye Kazandınız!', date: '10 Eylül 2024', preview: 'Tebrikler! Büyük ödülü kazandınız. Hemen tıklayın...' }
            ]
        };

        function loadEmails(folder) {
            const emailList = document.getElementById('emailList');
            const folderTitle = document.getElementById('folder-title');
            folderTitle.innerText = folder === 'inbox' ? 'Gelen Kutusu' : folder === 'sent' ? 'Giden Kutusu' : 'Spam';
            emailList.innerHTML = '';

            emails[folder].forEach(email => {
                const li = document.createElement('li');
                li.classList.add('email-item');
                li.innerHTML = `
                                                                                                     <div class="email-sender">${email.sender}</div>
                                                                                                     <div class="email-subject">${email.subject}</div>
                                                                                                     <div class="email-date">${email.date}</div>
                                                                                                 `;
                li.onclick = () => showPreview(email.subject, email.sender, email.preview);
                emailList.appendChild(li);
            });
        }

        function showPreview(subject, sender, content) {
            const previewDiv = document.getElementById('emailPreview');
            previewDiv.innerHTML = `
                                                                                                 <h4>${subject}</h4>
                                                                                                 <p><strong>Gönderen:</strong> ${sender}</p>
                                                                                                 <p>${content}</p>
                                                                                             `;
        }

        // İlk yüklemede Gelen Kutusu'nu göster
        loadEmails('inbox');

